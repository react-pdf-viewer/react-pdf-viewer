{
    "name": "@react-pdf-viewer/root",
    "version": "0.0.0",
    "description": "A React component to view a PDF document",
    "license": "https://react-pdf-viewer.dev/license",
    "author": {
        "name": "Nguyen Huu Phuoc",
        "email": "me@phuoc.ng",
        "url": "https://twitter.com/nghuuphuoc"
    },
    "homepage": "https://react-pdf-viewer.dev",
    "keywords": [
        "react",
        "react.js",
        "pdf",
        "pdf.js",
        "pdf viewer"
    ],
    "private": true,
    "packageManager": "npm@10.7.0",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build:clearcache": "rm -rf node_modules/.cache/turbo",
        "clean": "turbo run clean",
        "build": "turbo run build",
        "test:unit": "jest --no-cache --runInBand --config jest.config.ts",
        "test:e2e": "jest --no-cache --runInBand --config jest-e2e.config.ts",
        "lint": "eslint packages/**/src/*.ts packages/**/src/*.tsx",
        "format": "prettier --write \"**/*.+(css|js|json|jsx|less|md|ts|tsx)\"",
        "release": "turbo run release"
    },
    "devDependencies": {
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@testing-library/jest-dom": "^6.4.6",
        "@testing-library/react": "^16.0.0",
        "@types/expect-puppeteer": "^5.0.6",
        "@types/jest": "^29.5.12",
        "@types/jest-environment-puppeteer": "^5.0.6",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.13.1",
        "@typescript-eslint/parser": "^7.13.1",
        "canvas": "^2.11.2",
        "eslint": "^8.56.0",
        "eslint-plugin-react": "^7.34.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-puppeteer": "^10.0.1",
        "path2d-polyfill": "^3.1.1",
        "pdfjs-dist": "^4.3.136",
        "postcss": "^8.4.39",
        "prettier": "^3.3.2",
        "puppeteer": "^22.12.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "rollup": "^4.18.0",
        "rollup-plugin-postcss": "^4.0.2",
        "sass": "^1.77.6",
        "ts-jest": "^29.1.5",
        "ts-node": "^10.9.2",
        "tsx": "^4.16.2",
        "turbo": "^2.0.4",
        "typescript": "^5.5.2",
        "web-streams-polyfill": "^4.0.0"
    }
}
