{
    "name": "@react-pdf-viewer/default-layout",
    "version": "3.3.1",
    "description": "A React component to view a PDF document",
    "license": "https://react-pdf-viewer.dev/license",
    "author": {
        "name": "Nguyen Huu Phuoc",
        "email": "me@phuoc.ng",
        "url": "https://twitter.com/nghuuphuoc"
    },
    "homepage": "https://react-pdf-viewer.dev",
    "keywords": [
        "react",
        "react.js",
        "pdf",
        "pdf.js",
        "pdf viewer"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/react-pdf-viewer/react-pdf-viewer",
        "directory": "packages/default-layout"
    },
    "bugs": {
        "url": "https://github.com/react-pdf-viewer/react-pdf-viewer/issues"
    },
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/cjs/*.*",
        "lib/styles/*.*",
        "lib/index.d.ts",
        "lib/index.js"
    ],
    "dependencies": {
        "@react-pdf-viewer/attachment": "3.3.1",
        "@react-pdf-viewer/bookmark": "3.3.1",
        "@react-pdf-viewer/core": "3.3.1",
        "@react-pdf-viewer/thumbnail": "3.3.1",
        "@react-pdf-viewer/toolbar": "3.3.1"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "rm -rf lib && mkdir lib",
        "build": "npm run clean && npm run js && npm run css",
        "js": "cp src/index.d.ts lib && cp dist/index.js lib && rollup -c ../../rollup.config.js",
        "css": "sass --no-source-map src/styles/index.scss lib/styles/index.temp.css && postcss lib/styles/index.temp.css > lib/styles/index.css && rm -rf lib/styles/index.temp.css"
    }
}
